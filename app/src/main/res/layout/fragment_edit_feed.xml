<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_A700"
        android:padding="24dp">
        <LinearLayout
            android:id="@+id/linearCreateReview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_A700"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/imageChevronleft"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_chevronleft"
                    app:layout_constraintBottom_toBottomOf="@id/edit_review"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/edit_review"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/edit_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:text="@string/edit_review"
                    android:textColor="@color/gray_700"
                    android:textFontWeight="500"
                    android:textSize="27sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.core.widget.NestedScrollView
                    android:id="@id/reviewScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btn_confirm"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    app:layout_constraintVertical_bias="0.0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/user_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@id/profile_user_avatar"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/user_profile_avatar"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/circular_image"
                                android:background="@color/orange_50"
                                android:src="@drawable/default_avatar_male" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/profile_user_avatar"
                                app:layout_constraintStart_toEndOf="@id/profile_user_avatar"
                                app:layout_constraintTop_toTopOf="@id/profile_user_avatar"
                                tools:text="Đỗ Phú Quang"
                                tools:ignore="HardcodedText"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/select_eatery_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/user_account"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginVertical="5dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/avenir_next_lt_pro"
                            android:padding="16dp"
                            android:singleLine="true"
                            android:textColor="@color/gray_800"
                            android:textColorHint="@color/gray_500"
                            android:textFontWeight="400"
                            android:textSize="16sp"
                            android:hint="@string/select_eatery"
                            tools:ignore="RtlSymmetry" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description_text_input"
                            android:hint="@string/what_do_you_think_about_this_eatery"
                            app:layout_constraintTop_toBottomOf="@id/select_eatery_edittext"
                            app:layout_constraintStart_toStartOf="parent"
                            app:hintTextColor="@color/lightOrange"
                            app:boxStrokeColor="@color/lightOrange"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:ellipsize="end"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:padding="16dp"
                                android:singleLine="false"
                                android:textColorHint="@color/gray_500"
                                android:textSize="16sp"
                                android:textColor="@color/gray_800"
                                android:fontFamily="@font/avenir_next_lt_pro"
                                android:textFontWeight="400"
                                tools:ignore="RtlSymmetry"
                                tools:targetApi="p"
                                tools:text="Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc Quán như cc  Quán như cc Quán như cc Quán như cc Quán như cc" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView
                            android:id="@+id/imgDescription"
                            app:layout_constraintTop_toBottomOf="@id/description_text_input"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginVertical="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_rectangle37"
                            android:contentDescription="@string/description_image" />
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_select_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@id/imgDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/rectangle_bg_deep_orange_a200_radius_6"
                            android:ellipsize="end"
                            android:fontFamily="@font/avenir_next_lt_pro"
                            android:singleLine="true"
                            android:textAllCaps="true"
                            android:textColor="@color/white_A700"
                            android:textFontWeight="400"
                            android:textSize="16sp"
                            tools:ignore="UnusedAttribute"
                            android:text="@string/select_image" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.core.widget.NestedScrollView>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/rectangle_bg_blue_a200_radius_6"
                    android:ellipsize="end"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:paddingHorizontal="30dp"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="400"
                    android:textSize="16sp"
                    tools:ignore="UnusedAttribute"
                    android:text="@string/confirm" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>