<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingapp.client.home.detail_eatery.DetailEateryViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintGroup257"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_bg_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbToolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floating_action_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back_home_button"
                    app:backgroundTint="#4DFFFFFF"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:pressedTranslationZ="0dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
                    app:tint="@color/white_A700"
                    app:fabSize="mini"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floating_action_save"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/save_button"
                    app:backgroundTint="#4DFFFFFF"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:tint="@color/primaryColor"
                    app:pressedTranslationZ="0dp"
                    app:srcCompat="@drawable/ic_saved_outline"
                    app:fabSize="mini"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floating_action_save_favorited"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/save_button"
                    app:backgroundTint="#4DFFFFFF"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    app:tint="@color/white_A700"
                    app:pressedTranslationZ="0dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_baseline_favorite_24"
                    app:fabSize="mini"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/imgThumbnailEatery"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/constraintBackgroundRadius"
            app:imageUrl="@{viewModel.selectedProperty.photoUrl}"
            app:defaultUrl="@{viewModel.selectedProperty.photoUrl}"
            android:contentDescription="@string/thumbnail_eatery" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/constraintBackgroundRadius"
            app:layout_constraintEnd_toEndOf="@id/constraintGroup257"
            app:layout_constraintTop_toBottomOf="@id/imgThumbnailEatery"
            app:fabSize="mini"
            app:backgroundTint="@color/white_A700"
            app:srcCompat="@drawable/ic_outline_info_24"
            app:rippleColor="@android:color/transparent"
            android:contentDescription="@string/button_information_eatery" />
        <View
            android:id="@+id/tempView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/imgThumbnailEatery"
            app:layout_constraintBottom_toBottomOf="@id/imgThumbnailEatery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintBackgroundRadius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bg_white_radius_t_20"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toTopOf="@id/tempView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.24"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tvProductName"
                android:ellipsize="end"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_width="0dp"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textColor="@color/bluegray_700"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="500"
                android:text="@{viewModel.selectedProperty.name}"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintInfo"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="0dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvProductName"
                android:shadowRadius="200"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:id="@+id/txtDistance"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    app:layout_constraintHorizontal_bias="0.03"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/bluegray_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:textFontWeight="500"
                    android:text="@{viewModel.distance}"
                    tools:text="11km"
                    tools:ignore="UnusedAttribute" />
                <ImageView
                    android:id="@+id/imageStar1"
                    android:layout_height="14dp"
                    android:layout_width="14dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtDistance"/>
                <TextView
                    android:id="@+id/txtRating"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageStar1"
                    android:textColor="@color/bluegray_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:textFontWeight="500"
                    tools:text="1.1"
                    android:text="@{Double.toString(viewModel.selectedProperty.average_rating_count)}"
                    tools:ignore="UnusedAttribute" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/viewDivider1"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:background="@color/bluegray_51"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintBackgroundRadius" />
        <TextView
            android:id="@+id/tvNewProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/product"
            android:textColor="@color/bluegray_500"
            android:textFontWeight="500"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/viewDivider1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/svProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvNewProduct">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/forYouProductRecyclerView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_product" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>