<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingapp.client.bag.bagOrderItem.BagOrderItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.bag.bagOrderItem.BagOrderItemFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbToolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_margin="16dp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floating_action_button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/back_home_button"
                    app:backgroundTint="#4DFFFFFF"
                    app:borderWidth="0dp"
                    app:elevation="0dp"
                    android:onClick="@{()->viewModel.navigateUpToOrderCheckOutFragment()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:pressedTranslationZ="0dp"
                    app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24"
                    app:tint="@color/white_A700"
                    app:fabSize="mini"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:imageUrl="@{viewModel.product.img}"
            app:defaultUrl="@{viewModel.product.img}"
            android:scaleType="fitXY"
            android:contentDescription="@string/image_product"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csNamePriceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imgProduct">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textColor="@color/bluegray_700"
                android:textFontWeight="500"
                android:text="@{viewModel.product.name}"
                app:flow_wrapMode="chain"
                android:singleLine="false"
                android:ellipsize="end"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvProductPrice"
                tools:text="Pizzzaaaaaaaaaaaaaaaaaaaaaaa" />

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textSize="16sp"
                android:textFontWeight="500"
                android:text="@{@string/product_price(Double.toString(viewModel.product.price))}"
                android:textColor="@color/deep_orange_A200"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBottomOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="500000000000000"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/viewDivider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:background="@color/bluegray_51"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/csNamePriceProduct"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csAttetionForEatery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/viewDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/tvAttentionForEatery"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="24sp"
                android:textColor="@color/bluegray_700"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="600"
                android:text="Ingredients"/>
            <TextView
                android:id="@+id/tvIngredientList"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvAttentionForEatery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="12sp"
                android:textColor="@color/bluegray_700"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="400"
                android:text="@{viewModel.product.ingredients.toString().substring(1,viewModel.product.ingredients.toString().length()-1)}"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csQuantityProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/cardAddToBag"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                app:icon="@drawable/ic_baseline_remove_24"
                app:iconPadding="0dp"
                android:enabled="@{viewModel.minusButtonVisible}"
                android:onClick="@{() -> viewModel.reduceQuantityItem()}"
                app:layout_constraintEnd_toStartOf="@+id/tvQuatityProduct"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvQuatityProduct"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="@{Integer.toString(viewModel.orderQuantity)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toBottomOf="parent"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/avenir_next_lt_pro"
                tools:text="12345"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                app:icon="@drawable/ic_baseline_add_24"
                app:iconPadding="0dp"
                android:onClick="@{()->viewModel.raiseQuantityItem()}"
                app:layout_constraintStart_toEndOf="@id/tvQuatityProduct"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddToBag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="10dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/csTextTotal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnAddToCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvTotal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textSize="22sp"
                        android:textFontWeight="600"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_lt_pro"
                        android:textColor="@color/bluegray_700"
                        android:text="@string/total"/>
                    <TextView
                        android:id="@+id/tvTotalMoney"
                        android:gravity="end"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvTotal"
                        android:layout_marginEnd="20dp"
                        android:textSize="20dp"
                        android:text="@{@string/product_price(Double.toString(viewModel.totalPrice))}"
                        android:textColor="@color/deep_orange_A200"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avenir_next_lt_pro"
                        tools:text="5000000000"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCard"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/csTextTotal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="6dp"
                    android:onClick="@{() -> viewModel.saveOrderItemChange()}"
                    app:saveOrderChange="@{viewModel.orderQuantity}"
                    android:fontFamily="@font/avenir_next_lt_pro"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>