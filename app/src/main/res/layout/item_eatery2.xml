<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_bg_white">
        <TextView
            android:ellipsize="end"
            android:id="@+id/tvEateryName"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:textColor="@color/bluegray_700"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="400"
            android:text="Shrimp Pizza"
            tools:text="Shrimp Pizza"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <TextView
            android:id="@+id/tvIngredient"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_width="0dp"
            android:singleLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvEateryName"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:fontFamily="@font/avenir_next_lt_pro"
            android:textFontWeight="500"
            android:text="Shrimp, mushroom, cheese, tomato"
            tools:text="Shrimp, mushroom, cheese, tomato"
            tools:ignore="HardcodedText,UnusedAttribute" />
        <ImageView android:id="@+id/imgAvatar"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="12dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvEateryName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_rectangle44"
            tools:src="@drawable/img_rectangle44"
            tools:ignore="ContentDescription" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintPrice"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvIngredient"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/tvNewPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:singleLine="true"
                android:textColor="@color/deep_orange_A200"
                android:textFontWeight="500"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/viewLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText,UnusedAttribute"
                android:text="$ 12.00"
                tools:text="$ 12.00" />
            <TextView
                android:id="@+id/tvOldPrice"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_width="wrap_content"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/viewLine"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="@+id/viewLine"
                app:layout_constraintTop_toTopOf="@+id/tvNewPrice"
                android:textColor="@color/gray_500"
                android:textSize="12sp"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="500"
                android:text="$ 20.00"
                tools:text="$ 20.00"
                tools:ignore="HardcodedText,UnusedAttribute" />
            <View
                android:background="@drawable/rectangle_border_gray_500"
                android:id="@+id/viewLine"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="106dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_width="44dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvNewPrice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.09"
                app:layout_constraintStart_toEndOf="@+id/tvNewPrice"
                app:layout_constraintTop_toTopOf="@+id/tvOldPrice"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>