<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="eatery"
            type="xyz.daijoubuteam.foodshoppingapp.model.Eatery" />
        <variable
            name="distance"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_bg_white"
        tools:ignore="ExtraText">

        <ImageView android:id="@+id/image_view"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="10dp"
            android:scaleType="fitXY"
            app:imageUrl="@{eatery.photoUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/listProduct"
            android:src="@drawable/img_rectangle44"
            tools:src="@drawable/img_rectangle44"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/csEatery"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/image_view"
            app:layout_constraintBottom_toBottomOf="@id/image_view"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{eatery.name}"
                android:textSize="20sp"
                android:textColor="@color/bluegray_700"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textFontWeight="500"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Lorem ipsum dolor sit amet, lorem "
                tools:ignore="HardcodedText,UnusedAttribute"/>
            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/name_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{eatery.description}"
                android:textSize="14sp"
                android:textColor="@color/bluegray_700"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Lorem ipsum dolor sit amet, lorem "
                tools:ignore="HardcodedText,UnusedAttribute"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDistance"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{distance}"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.11"
                    android:textColor="@color/bluegray_700"
                    android:textSize="12sp"
                    tools:text="18 km"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:textFontWeight="500"
                    tools:ignore="UnusedAttribute" />
                <ImageView
                    android:id="@+id/imageStar1"
                    android:layout_height="0dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="14dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvDistance"
                    app:layout_constraintDimensionRatio="1.0:1.0"
                    app:layout_constraintHorizontal_bias="0.67"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:id="@+id/tvRatingCount"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{Double.toString(eatery.average_rating_count)}"
                    tools:text="@string/lbl_5_0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/imageStar1"
                    android:textColor="@color/bluegray_700"
                    android:textSize="12sp"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:textFontWeight="500"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/detail_event_divider"
            android:layout_width="285dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            app:layout_constraintTop_toBottomOf="@id/csEatery"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view"
            tools:itemCount="2"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_searched_product"/>
        <View
            android:id="@+id/viewDivider"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:background="@color/bluegray_51"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listProduct" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>