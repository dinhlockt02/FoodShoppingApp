<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="xyz.daijoubuteam.foodshoppingapp.authentication.signup.SignUpViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".authentication.SignUpFragment">

        <Button
            android:id="@+id/move_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move to Login"
            android:onClick="@{() -> viewmodel.onNavigateToLogin()}"/>

    </FrameLayout>
</layout>