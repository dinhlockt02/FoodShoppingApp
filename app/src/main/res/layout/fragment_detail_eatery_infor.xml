<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="xyz.daijoubuteam.foodshoppingapp.client.home.detail_eatery.DetailEateryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".client.home.detail_eatery.DetailEateryInforFragment">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddressEatery"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintCardAddressEatery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/previewMapEatery"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
                <TextView
                    android:id="@+id/nameEatery"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_width="0dp"
                    android:text="Cơm Ngô Quyền"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/previewMapEatery"
                    android:textSize="24sp"
                    android:fontFamily="@font/avenir_next_lt_pro"
                    android:textColor="@color/bluegray_700"
                    android:textFontWeight="500"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintInfo"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nameEatery"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <TextView
                        android:id="@+id/txtKmDelivery"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/bluegray_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/avenir_next_lt_pro"
                        android:textFontWeight="500"
                        android:text="@{viewModel.distance}"
                        tools:ignore="UnusedAttribute" />
                    <ImageView
                        android:id="@+id/imageStar1"
                        android:layout_height="14dp"
                        android:layout_width="14dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_star"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/txtKmDelivery"/>
                    <TextView
                        android:id="@+id/txtRatingEatery"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        app:layout_constraintHorizontal_bias="0.03"
                        android:textColor="@color/bluegray_700"
                        android:textSize="12sp"
                        android:fontFamily="@font/avenir_next_lt_pro"
                        android:textFontWeight="500"
                        app:layout_constraintStart_toEndOf="@id/imageStar1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        tools:text="5.0"
                        tools:ignore="UnusedAttribute" />
                    <TextView
                        android:id="@+id/txt200Rated"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="81dp"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        app:layout_constraintHorizontal_bias="0.07"
                        app:layout_constraintStart_toEndOf="@id/txtRatingEatery"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp"
                        android:fontFamily="@font/avenir_next_lt_pro"
                        android:textFontWeight="500"
                        android:text="(200+ rated)"
                        tools:ignore="UnusedAttribute" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/cardAddressEatery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/contactInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/contact_information"
                android:textSize="24sp"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textColor="@color/bluegray_700"
                android:textFontWeight="400" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contactDetailInformation"
                app:layout_constraintTop_toBottomOf="@id/contactInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/txtAddress"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintDay"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txtEateryAddress"
                        app:layout_constraintHorizontal_bias="0.07"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:ellipsize="end"
                            android:id="@+id/txtWeekdays"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:text="@string/address"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.1"
                            app:layout_constraintStart_toEndOf="@+id/imageCalendar"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textSize="16sp"
                            android:textFontWeight="500"
                            android:textColor="@color/bluegray_500"
                            android:fontFamily="@font/avenir_next_lt_pro" />
                        <ImageView
                            android:id="@+id/imageCalendar"
                            android:layout_height="0dp"
                            android:layout_width="wrap_content"
                            android:scaleType="fitXY"
                            android:src="@drawable/map_marker_outline"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1.0:1.0"
                            app:layout_constraintEnd_toStartOf="@+id/txtWeekdays"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:id="@+id/txtEateryAddress"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_width="0dp"
                        android:text="@{viewModel.selectedProperty.addressEatery.address}"
                        android:scrollHorizontally="false"
                        android:maxLines="10"
                        android:ellipsize="none"
                        android:singleLine="false"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.66"
                        app:layout_constraintStart_toEndOf="@id/constraintDay"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="16sp"
                        android:textFontWeight="500"
                        android:textColor="@color/bluegray_500"
                        android:fontFamily="@font/avenir_next_lt_pro"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/txtOpeningHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/contactDetailInformation"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:text="@string/opening_hours"
                android:textSize="24sp"
                android:fontFamily="@font/avenir_next_lt_pro"
                android:textColor="@color/bluegray_700"
                android:textFontWeight="400" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRestaurantInfo"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtOpeningHours"
                tools:itemCount="2"
                tools:listitem="@layout/fragment_item_time_activity_eatery"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>